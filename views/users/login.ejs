<% layout('layouts/boilerplate.ejs') -%>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

  #auth-page-container {
    font-family: 'Poppins', sans-serif;
    background-size: cover;
    background-position: center;
    min-height: calc(100vh - 56px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 0;
    transition: background-image 1s ease-in-out;
  }

  .auth-card {
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.18);
    border-radius: 16px;
    padding: 40px;
    color: #fff;
  }

  .auth-card h1, .form-label { color: #fff; }

  .form-control {
    background: transparent;
    border: none;
    border-bottom: 2px solid rgba(255, 255, 255, 0.5);
    border-radius: 0;
    color: #fff !important;
  }
  .form-control::placeholder { color: rgba(255, 255, 255, 0.7); }
  .form-control:focus {
    box-shadow: none;
    border-bottom-color: #fff;
  }

  .invalid-feedback { color: #ffcccc; font-weight: bold; }

  .auth-btn {
    background: #fff;
    color: #333;
    font-weight: 600;
    border-radius: 25px;
    border: none;
  }

  .auth-link {
    color: #fff;
    text-align: center;
    display: block;
    margin-top: 1.5rem;
    text-decoration: none;
  }

  .auth-like-holder {
    display: flex;
    flex-direction: start;
    margin-left: 2rem;
  }
   .auth-like-holder{
        display: flex;
        flex-direction: start;
        margin-left: 2rem;
    }
   .form-control{
        background: none !important;
        border-radius: 2rem !important;
    }
     .captoins{
    margin-bottom: 2rem;
    }
      .search-inp{
        background-color:#0f110a !important;
        opacity: 0.5!important;
       
    }
</style>

<div id="auth-page-container">
  <div class="col-md-6 col-xl-4">
    <div class="auth-card">
      <h1 class="captoins">Login</h1>
      <form method="POST" action="/login" novalidate class="needs-validation">

        <div class="mb-4">
          <label for="email" class="form-label"><b>Email Id</b></label>
          <input type="text" name="email" placeholder="Enter your username" class="form-control" id="email" required>
          <div class="invalid-feedback">Please enter your Email.</div>
        </div>

        <div class="mb-4">
          <label for="password" class="form-label"><b>Password</b></label>
          <input type="password" name="password" placeholder="Enter your password" class="form-control" id="password" required>
          <div class="invalid-feedback">Please enter your password.</div>
        </div>

        <button class="btn auth-btn w-100 mt-3 py-2">Login</button>

        <div class="auth-like-holder">
            
          <a href="/signup" class="auth-link">Donâ€™t have an account?&nbsp;Sign Up</a>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- ðŸŒ† Dynamic random background (same as signup) -->
<script>
  const images = [
    'https://images.unsplash.com/photo-1600585154340-be6161a56a0c?q=80&w=2072&auto=format&fit=crop',
    'https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?q=80&w=2072&auto=format&fit=crop',
    'https://images.unsplash.com/photo-1560185008-c5f0eacdcf36?q=80&w=2072&auto=format&fit=crop',
    'https://images.unsplash.com/photo-1580587771525-78b9dba3b914?q=80&w=2072&auto=format&fit=crop'
  ];

  document.getElementById('auth-page-container').style.backgroundImage =
    `url('${images[Math.floor(Math.random() * images.length)]}')`;
</script>
