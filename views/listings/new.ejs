<% layout('layouts/boilerplate.ejs') -%>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

  body {
    background: linear-gradient(135deg, #eef2f3, #8e9eab);
    font-family: 'Poppins', sans-serif;
  }

  .create-container {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    border-radius: 20px;
    padding: 2.5rem;
    margin-top: 4rem;
    margin-bottom: 3rem;
    transition: all 0.3s ease-in-out;
  }

  .create-container:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.2);
  }

  .create-container h3 {
    text-align: center;
    font-weight: 600;
    color: #2b2d42;
    margin-bottom: 1.5rem;
  }

  label {
    font-weight: 500;
    color: #495057;
  }

  input[type="text"],
  input[type="number"],
  input[type="file"],
  textarea {
    border-radius: 10px;
    border: 1px solid #ccc;
    padding: 0.75rem;
    font-size: 0.95rem;
    transition: 0.3s ease;
  }

  input:focus, textarea:focus {
    border-color: #2b2d42;
    box-shadow: 0 0 0 2px rgba(43, 45, 66, 0.2);
  }

  .create-btn {
    width: 100%;
    background: linear-gradient(90deg, #2b2d42, #4b6cb7);
    border: none;
    border-radius: 10px;
    padding: 0.8rem;
    color: #fff;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition: 0.3s ease;
  }

  .create-btn:hover {
    background: linear-gradient(90deg, #4b6cb7, #182848);
  }

  .invalid-feedback {
    color: #d90429;
    font-size: 0.8rem;
  }

  .note {
    text-align: center;
    font-size: 0.9rem;
    color: #6c757d;
    margin-top: 1rem;
  }
</style>

<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10 col-sm-12">
        <div class="create-container">
          <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <h3>Create New Listing</h3>

            <div class="mb-3">
              <label for="title"><b>Title</b></label>
              <input type="text" name="listing[title]" placeholder="Enter your catchy title" class="form-control" id="title" required>
              <div class="invalid-feedback">Please enter a valid title.</div>
            </div>

            <div class="mb-3">
              <label for="description"><b>Description</b></label>
              <textarea name="listing[description]" placeholder="Write your property description" class="form-control" id="description" required></textarea>
              <div class="invalid-feedback">Please provide a valid description.</div>
            </div>

            <div class="mb-3">
              <label for="image"><b>Upload Listing Image</b></label>
              <input type="file" name="listing[image]" class="form-control" id="image" required>
              <div class="invalid-feedback">Please upload an image.</div>
            </div>

            <div class="row">
              <div class="col-md-4 mb-3">
                <label for="price"><b>Enter Price</b></label>
                <input name="listing[price]" type="number" placeholder="1200" class="form-control" id="price" required>
                <div class="invalid-feedback">Please enter a valid price.</div>
              </div>

              <div class="col-md-8 mb-3">
                <label for="country"><b>Country</b></label>
                <input type="text" id="country" name="listing[country]" placeholder="India" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid country.</div>
              </div>
            </div>

            <div class="mb-3">
              <label for="location"><b>City / Current Location</b></label>
              <input type="text" name="listing[location]" placeholder="Jaipur, Rajasthan" class="form-control" id="location" required>
              <div class="invalid-feedback">Please enter a valid location.</div>
            </div>

            <button class="btn create-btn mt-2"><b>Add Listing</b></button>

            <p class="note">üè† Your listing will be visible to users after creation.</p>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
